                <div class="col-md-6">
                    <span class="fa-stack fa-4x">
                        <i class="fa fa-circle fa-stack-2x text-primary"></i>
                        <i class="fa fa-laptop fa-stack-1x fa-inverse"></i>
                    </span>
                    <h4 class="service-heading">Become a cook! </h4>
                    <p class="text-muted">Love to cook? Want to make a couple of euro's? Apply to become one of our cooks and get paid to share the food love!</p>
                    <a href="/cook" class="btn btn-xl">Find Out More</a>
                </div>
              </div>
        </div>
    </section>

    <!-- Portfolio Grid Section -->
    <section id="portfolio" class="bg-light-gray" ng-app="menuStore" ng-controller="menuController as menuCtlr" ng-show="showToday" ng-init="collectMenus('today')">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center" ng-switch="whichday">
                    <h2 class="section-heading">Todays Selected Menus</h2>
                     <h2 class="section-heading"> {{todaysDate | date : 'longDate' }} </h2>
                    <div ng-switch-when="today">
                    <h3  class="section-subheading text-muted">Booking is already over for todays menu! Check <a href ng-click="collectMenus('tomorow')">TOMOROWS MENU</a> to order your meal</h3>
                  </div>
                    <div ng-switch-when="tomorow">
                    <h3  class="section-subheading text-muted">Booking is already over for todays menu! Check <a href ng-click="collectMenus('today')">TODAYS MENU</a> to order your meal</h3>
                  </div>
                </div>
            </div>
              <div class="row" >
                <div class="col-md-4 col-sm-6 portfolio-item" ng-repeat="product in products">
                  <a href="/listmenus/menu/{{product.id}}"class="portfolio-link" >
                        <div class="portfolio-hover">
                            <div class="portfolio-hover-content">
                                <i class="fa fa-plus fa-3x"></i>
                            </div>
                        </div>
                        <img ng-src="{{ product.images[0] }}" class="img-responsive" alt="{{product.name}}"/>
                    </a>
                    <div class="portfolio-caption">
                        <h4>{{product.name}}</h4>
                        <p class="text-muted">{{product.teaser}}</p>
                    </div>
                </div>
        </div>
        <div class="col-lg-12 text-center"> <a href="/listmenus" class="section-heading" >View all Menus </a ></div>

        <div ng-show="menuModal">
          <h1> Menu </h1>
        	<h3> {{productDetails.name}} </h3>
        	<div> {{productDetails.img[0]}} </div>
        	<div> {{productDetails.category}} </div>
        	<div> {{productDetails.description}} </div>
          <div> {{productDetails.price}} </div>
          <button ng-click="buyProduct(product.price)">Buy</button>
          <div ng-show=purchaseModal>Lets show it</div>
        </div>
    </section>
