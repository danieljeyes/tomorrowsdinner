
    <div class="bg-light-gray" ng-app="menuStore" ng-controller="menuController as menuCtlr" ng-init="viewMenu('<%= req.params.id %>')">
      <div class="container" ng-show="!error">
            <div class="row">
              <div class="alert alert-danger" role="alert" ng-show="productDetails.status == 'draft'">
                  This menu has not yet been published, you are viewing in preview mode!
                </div>
                <div class="col-lg-12 text-center">
                  <span class="sr-only">Error:</span>
                    <h2 class="section-heading">{{productDetails.name}}</h2>
                 <div>
                    <h3  class="section-subheading text-muted">{{productDetails.teaser}}</h3>
                  </div>
                </div>
                <div class="col-sm-7">
                 <div class="gallery-left relative clearfix">
                <div class="images">
                <a href=""><img width="600"  src="/{{productDetails.images[0]}}" class="attachment-shop_single wp-post-image" alt="bigstock-Vintage-Empty-Leather-Suitcase-81170282_blue" title="bigstock-Vintage-Empty-Leather-Suitcase-81170282_blue" data-o_src=""></a>
                  <div class="thumbnails columns-3">
                    <div>
                      <a href="" title=""><img width="150" src="/{{productDetails.images[0]}}" alt="" title=""></a>
                      <a href="" title=""><img width="150" src="/{{productDetails.images[1]}}" alt="" title=""></a>
                      <a href="" title=""><img width="150" src="/{{productDetails.images[2]}}" alt="" title=""></a>
                   </div>
                  </div>
                </div>
                <span class="sale-primary"></span>
                </div>
          </div>

          <div class="col-sm-5">
            <div class="panel panel-default">
              <!-- Default panel contents -->
              <div class="panel-heading"><h4>Menu Overview</h4></div>
              <div class="panel-body">
                <p>{{productDetails.description}}</p>
              </div>

              <!-- List group -->
              <ul class="list-group">
                <li class="list-group-item"><b>Category:</b> {{productDetails.category}}</li>
                <li class="list-group-item"><b>Cources:</b>3 Courses</li>
                <li class="list-group-item"><b>Date:</b> {{productDetails.dateofdinner | date : 'longDate' }}</li>
                <li class="list-group-item"><b>Avalubility:</b> Porta ac consectetur ac</li>
                <li class="list-group-item"><b>Order Closes:</b> Porta ac consectetur ac</li>
                <li class="list-group-item"><b>{{productDetails.price}}</b>Â£</li>
              </ul>
            </div>
            <div class="panel panel-default" ng-app="menuStore" ng-controller="PaymentController as paymentCtrl">

              <div class="panel-heading"><h4>Order Menu</h4></div>
              <form id="checkout" method="post" action="/payment/checkout">
                <div class="panel-body">
                  <div class="input-group">
                    <span class="input-group-addon" id="basic-addon1">Number of Portions:</span>
                    <select name="portions" class="form-control" ng-model="score" ng-change="menuPaymentCal(score, productDetails.price)">
                        <option ng-repeat="portion in getNumber(10) track by $index" value="{{$index+1}}" >{{$index+1}} portions</option>
                    </select>
                  </div>
                  <div class="input-group">
                    <span class="input-group-addon" id="basic-addon1">Pickup Time</span>
                    <select name="pickuptime" class="form-control" >
                        <option value="black">Black</option>
                    </select>
                  </div>
                <div id="payment-form"></div>
                  <input class="btn btn-lg btn-xl" type="submit" value="Pay &#8364; {{paymentAmount}}">
                  <input type="hidden" value="{{productDetails.price}}" name="price" />
                  <input type="hidden" value="{{productDetails.id}}" name="menuid" />
             </form>
           </div>
             <script src="https://js.braintreegateway.com/v2/braintree.js"></script>
             <script>
             // We generated a client token for you so you can test out this code
             // immediately. In a production-ready integration, you will need to
             // generate a client token on your server (see section below).
             var clientToken = "";

             braintree.setup(clientToken, "dropin", {
               container: "payment-form"
             });
             </script>
            </div>
          </div>


          <div class="row">
            <div class="col-sm-7">
                <div class="panel panel-default">
                  <div class="panel-heading"><h4>Menu Details</h4></div>
                    <ul class="list-group">
                      <li ng-show="productDetails.starter"class="list-group-item"><b>Stater:</b> {{productDetails.starter}}</li>
                      <li ng-show="productDetails.main" class="list-group-item"><b>Main:</b>{{productDetails.main}}</li>
                      <li ng-show="productDetails.desert"class="list-group-item"><b>Desert:</b> {{productDetails.desert}}</li>
                      <li ng-show="productDetails.sides"class="list-group-item"><b>Sides:</b> {{productDetails.sides}}</li>
                      <li ng-show="productDetails.drinks"class="list-group-item"><b>Drink:</b> {{productDetails.drinks}}</li>
                    </ul>
                </div>
                <div class="panel panel-default">
                  <div class="panel-heading"><h4>ingrediants</h4></div>
                  <div class="panel-body">{{productDetails.ingrediants}} </div>
                </div>
            </div>
          <div class="col-sm-5">
            <div class="panel panel-default">
                <!-- Default panel contents -->
                <div class="panel-heading"><h4>Pickup Location</h4></div>
                <div class="panel-body">
                  <div id="map_canvas">
                    <ui-gmap-google-map center="map.center" zoom="map.zoom" draggable="true" options="options">
                      <ui-gmap-circle ng-repeat="c in circles track by c.id" center="c.center" stroke="c.stroke" fill="c.fill" radius="c.radius"
                        visible="c.visible" geodesic="c.geodesic" editable="c.editable" draggable="c.draggable" clickable="c.clickable" control="c.control"></ui-gmap-circle>
                    </ui-gmap-google-map>
                  </div>
                  </div<
                  <div class="panel-body">
                  <p> Exact address will be provided after menu purchase, for privacy reasons. </p>
                </div>
                </div>
              </div>
            </div>
      </div>
      <div class="container" ng-show="error">
        <h3 class=col-lg-12> Opps!</h3>
        <h4> The product your looking for doesnt exist. Please try again </h4>
      </div>


    </section>
