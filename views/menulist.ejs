

    <!-- Portfolio Grid Section -->
    <section id="portfolio" class="bg-light-gray" ng-app="menuStore" ng-controller="menuController as menuCtlr" ng-init="collectMenus()">
        <div class="container" ng-repeat="(key, value) in products | groupBy: 'dateofdinner'">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <h2 class="section-heading">Menus for </h2>
                     <h2 class="section-heading"> {{key | date : 'longDate' }} </h2>
                </div>
            </div>
              <div class="row" >
                <div class="col-md-4 col-sm-6 portfolio-item" ng-repeat="product in value">
                    <a href="/listmenus/menu/{{product.id}}"class="portfolio-link" >
                        <div class="portfolio-hover">
                            <div class="portfolio-hover-content">
                                <i class="fa fa-plus fa-3x"></i>
                            </div>
                        </div>
                        <img ng-src="/{{ product.images[0] }}" class="img-responsive" alt="{{product.name}}"/>
                    </a>
                    <div class="portfolio-caption">
                        <h4>{{product.name}}</h4>
                        <p class="text-muted">{{product.teaser}}</p>
                    </div>
                </div>
        </div>


    </section>
