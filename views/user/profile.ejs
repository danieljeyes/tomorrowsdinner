
<div class="container" ng-app="menuStore" ng-controller="editProfile" ng-init="collectUserInfo('<%=req.session.passport.user%>')">
    <h1>Edit Profile</h1>
  	<hr>
	<div class="row">
      <!-- left column -->
      <div class="col-md-3">
        <div class="text-center">
          <img src="//placehold.it/100" class="avatar img-circle" alt="avatar">
          <h6>Upload a different photo...</h6>

          <input type="file" class="form-control">
        </div>
      </div>

      <!-- edit form column -->
      <div class="col-md-9 personal-info">
        <div class="alert alert-info alert-dismissable">
          <a class="panel-close close" data-dismiss="alert">Ã—</a>
          <i class="fa fa-coffee"></i>
          This is an <strong>.alert</strong>. Use this to show important messages to the user.
        </div>
        <h3>Personal info</h3>

        <form class="form-horizontal" role="form">
          <div class="form-group">
            <label class="col-lg-3 control-label">First name:</label>
            <div class="col-lg-8">
              <input class="form-control" type="text" id="fname" ng-model="userFormData.fname">
            </div>
          </div>
          <div class="form-group">
            <label class="col-lg-3 control-label">Last name:</label>
            <div class="col-lg-8">
              <input class="form-control" type="text" id="lname" ng-model="userFormData.lname">
            </div>
          </div>
          <div class="form-group">
            <label class="col-lg-3 control-label">Country:</label>
            <div class="col-lg-8">
              <div class="ui-select">
                <select id="country" class="form-control">
                  <option value="BE">Belgium</option>
                </select>
              </div>
            </div>
          </div>
          <div class="form-group">
            <label class="col-lg-3 control-label">City:</label>
            <div class="col-lg-8">
              <input class="form-control" type="text" id="city" ng-model="userFormData.city">
            </div>
          </div>
          <div class="form-group">
            <label class="col-lg-3 control-label">Profile Name (Publicily visable name):</label>
            <div class="col-lg-8">
              <input class="form-control" type="text" id="visablename" ng-model="userFormData.visablename">
            </div>
          </div>
          <div class="form-group">
            <label class="col-lg-3 control-label">About Me</label>
            <div class="col-lg-8">
              <textarea class="form-control" rows="5" id="about" ng-model="userFormData.about"></textarea>
            </div>
          </div>
          <h3>Login Info</h3>
          <div class="form-group">
            <label class="col-lg-3 control-label">Email:</label>
            <div class="col-lg-8">
              <input class="form-control" type="text" id="email" ng-model="userFormData.email" disabled>
            </div>
          </div>
          <div class="form-group">
            <label class="col-md-3 control-label">Password:</label>
            <div class="col-md-8">
              <input class="form-control" id="password" type="password" >
            </div>
          </div>
          <div class="form-group">
            <label class="col-md-3 control-label">Confirm password:</label>
            <div class="col-md-8">
              <input class="form-control" id="confirmpassword" type="password" >
            </div>
          </div>
          <div class="form-group">
            <label class="col-md-3 control-label"></label>
            <div class="col-md-8">
              <input type="button" class="btn btn-primary" value="Save Changes" ng-click="updateUserInfo(userFormData)">
              <span></span>
            </div>
          </div>
        </form>
      </div>
  </div>
</div>
<hr>
